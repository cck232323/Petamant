@model MyDotnetApp.DTOs.UserDto

@{
    ViewData["Title"] = "用户资料";
}

<div class="container">
    <h2>用户资料</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.UserName</h5>
                    <p class="card-text">邮箱: @Model.Email</p>
                    
                    <div class="mt-3">
                        <a asp-controller="Home" asp-action="MyActivities" class="btn btn-primary">我的活动</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>